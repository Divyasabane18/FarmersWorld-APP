<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_header"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmer Dashboard"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <!-- Image Box -->
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@drawable/image_border"
            android:layout_marginBottom="16dp"
            android:elevation="6dp" />

        <!-- Select Image Button -->
        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_teal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp" />


        <!-- Product Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/productNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp" />

        <!-- Product Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/productPriceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:inputType="numberDecimal"
            android:drawableLeft="@drawable/baseline_currency_rupee_24"
            android:drawablePadding="10dp"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp" />

        <!-- Product Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/productDescEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp" />

        <!-- Location Pickers -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select State"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/stateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="10dp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/citySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="10dp"
            android:padding="10dp" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Product"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_teal"
            android:layout_marginTop="28dp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
